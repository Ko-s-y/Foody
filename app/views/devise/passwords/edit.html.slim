- provide(:title, "パスワード変更")
section.registration-form.hero.is-dark.is-fullheight
  .hero-body
    .container
      .columns.is-centered
        .column.is-12-mobile.is-10-tablet.is-10-desktop.is-9-widescreen.is-8-fullhd
          .box
            .field.has-text-centered
              strong
                | パスワードの変更
            .box
              = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
                = render "devise/shared/error_messages", resource: resource
                = f.hidden_field :reset_password_token
                .field
                  = f.label :新しいパスワード, class: "label"
                  .control.has-icons-left.has-icons-right
                    = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input is-info", placeholder: "(必須)"
                    span#pass-display
                      i.far.fa-eye
                    span.icon.is-small.is-left
                      i.fas.fa-lock
                  - if @minimum_password_length
                    p.help.is-danger
                      | *
                      = @minimum_password_length
                      | 文字以上
                .field
                  = f.label :パスワードの確認, class: "label"
                  .control.has-icons-left.has-icons-right
                    = f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-info", placeholder: "(必須)"
                    span#confirm-display
                      i.far.fa-eye
                    span.icon.is-small.is-left
                      i.fas.fa-lock
                  p#pass-status.help.is-danger
                    |  
                .field
                  = f.submit "パスワードを変更する", class: "button is-info is-fullwidth"
              = render "devise/shared/links"
