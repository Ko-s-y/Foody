<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-8-widescreen">
          <div class="box">
            <div class="field has-text-centered">
              <strong>アカウント情報編集</strong>
            </div>
            <div class="box">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="field">
                  <%= f.label :アカウント名, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input is-info", placeholder: "(必須)" %>
                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>確認しています: <%= resource.unconfirmed_email %></div>
                      <% end %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*6〜12字以内</p>
                </div>
                <div class="field">
                  <%= f.label :メールアドレス, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                    <p class="help is-danger">*@を含めて下さい</p>
                  </div>
                </div>
                <div class="field">
                  <%= f.label :パスワード, class: "label" %>
                  <div class="control has-icons-left has-icons-right">
                    <%= f.password_field :password, autocomplete: "new-password", class: "input is-info", placeholder: "(#{@minimum_password_length}文字以上)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="far fa-eye"></i>
                    </span>
                  </div>
                  <% if @minimum_password_length %>
                    <p class="help is-danger">*変更しない場合は空白のままにして下さい</p>
                  <% end %>
                </div>
                <div class="field">
                  <%= f.label :現在のパスワード, class: "label" %>
                  <div class="control has-icons-left has-icons-right">
                    <%= f.password_field :current_password, autocomplete: "current-password", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="far fa-eye"></i>
                    </span>
                    <p class="help is-danger">*変更には現在のパスワードが必要です</p>
                  </div>
                </div>
                <div class="field">
                  <%= f.submit "更新する", class: "button is-link is-fullwidth m-t-10 m-b-10" %>
                </div>
              <% end %>
              <%= link_to "戻る", :back %>
              <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger is-fullwidth m-t-10 m-b-10" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
