<% provide(:title, "アカウント作成") %>
<section class="registration-form hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-12-mobile is-10-tablet is-10-desktop is-9-widescreen is-8-fullhd">
          <div class="box">
            <div class="field has-text-centered">
              <strong>新規アカウント登録</strong>
            </div>
            <div class="box">
              <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="field">
                  <%= f.label :アカウント名, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input is-info", placeholder: "(必須)", required: true, maxlength: 12 %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*半角英数字6〜12字以内 例)SampleName23</p>
                </div>
                <div class="field">
                  <%= f.label :調理ジャンル, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :introduction, autocomplete: "introduction", class: "input is-info", placeholder: "(必須)", required: true, maxlength: 10, list: "job-name" %>
                    <datalist id="job-name">
                      <option value="うどん">
                      <option value="郷土料理">
                      <option value="スイーツ">
                      <option value="寿司">
                      <option value="蕎麦">
                      <option value="中華">
                      <option value="鉄板焼き">
                      <option value="天ぷら">
                      <option value="パン">
                      <option value="ピッツァ">
                      <option value="焼肉">
                      <option value="ラーメン">
                      <option value="イタリア料理">
                      <option value="韓国料理">
                      <option value="スペイン料理">
                      <option value="タイ料理">
                      <option value="フランス料理">
                      <option value="メキシコ料理">
                      <option value="洋食">
                      <option value="ロシア料理">
                      <option value="和食">
                    </datalist>
                    <span class="icon is-small is-left">
                      <i class="fas fa-utensils"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*10字以内 該当する物がなければ入力をお願い致します</p>
                </div>
                <div class="field">
                  <%= f.label :メールアドレス, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*@を含めて下さい</p>
                </div>
                <div class="field">
                  <%= f.label :パスワード, class: "label" %>
                  <div class="control has-icons-left has-icons-right">
                  <%= f.password_field :password, autocomplete: "new-password", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="far fa-eye"></i>
                    </span>
                  </div>
                  <% if @minimum_password_length %>
                    <p class="help is-danger">*<%= @minimum_password_length %>文字以上</p>
                  <% end %>
                </div>
                <div class="field">
                  <%= f.label :パスワードの確認, class: "label" %>
                  <div class="control has-icons-left has-icons-right">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="far fa-eye"></i>
                    </span>
                  </div>
                </div>
                <div class="field">
                  <%= f.label :利用規約, class: "label" %>
                  <%= render "shared/terms" %>
                  <%= f.check_box :agreement_terms, as: :boolean %>
                  <span>利用規約に同意する</span>
                  <p class="help is-danger">*同意いただけない場合、当サイトはご利用いただけません</p>
                </div>
                <div class="field">
                  <%= f.submit "登録する", class: "button is-info is-fullwidth" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
