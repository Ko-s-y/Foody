<% content_for :title do %>
  Sign up - User
<% end %>
<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-10-desktop is-8-widescreen">
          <div class="box">
            <div class="field has-text-centered">
              <strong>新規アカウント登録</strong>
            </div>
            <div class="box">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="field">
                  <%= f.label :アカウント名, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*半角英数字6〜12字以内 例)SampleName23</p>
                </div>
                <div class="field">
                  <%= f.label :調理ジャンル, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :introduction, autocomplete: "introduction", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-utensils"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*10字以内 例)フレンチ,イタリアン,和食,中華等</p>
                </div>
                <div class="field">
                  <%= f.label :メールアドレス, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*@を含めて下さい</p>
                </div>
                <div class="field">
                  <%= f.label :パスワード, class: "label" %>
                  <div class="control has-icons-left has-icons-right">
                    <%= f.password_field :password, autocomplete: "new-password", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="far fa-eye"></i>
                    </span>
                  </div>
                  <% if @minimum_password_length %>
                    <p class="help is-danger">*<%= @minimum_password_length %>文字以上</p>
                  <% end %>
                </div>
                <div class="field">
                  <%= f.label :パスワードの確認, class: "label" %>
                  <div class="control has-icons-left has-icons-right">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="far fa-eye"></i>
                    </span>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <label class="checkbox">
                      <input type="checkbox">
                      <a href="#">利用規約</a>に同意します
                    </label>
                  </div>
                </div>
                <div class="field">
                  <%= f.submit "登録する", class: "button is-link is-fullwidth m-t-10 m-b-10" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
