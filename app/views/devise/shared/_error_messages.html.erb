<% if resource.errors.any? %>
  <script>
    <% resource.errors.full_messages.each do |message| %>
      new Noty ({
        type: 'error',
        layout: 'topRight',
        timeout: false,
        theme: 'sunset',
        text: '<%= message %>'
      }).show();
    <% end %>
  </script>
<% end %>
