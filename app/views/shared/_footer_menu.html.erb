<% if user_signed_in? %>
  <section class="footer-menu-section">
    <div class="footer-menu-area">
      <div class="footer-menues">
        <ul class="menu-list">
          <li class="menu-item">
            <%= link_to users_show_path do %>
              <i class="fas fa-user footer-icon"></i>
            <% end %>
          </li>
          <li class="menu-item icon-border">
            <%= link_to posts_path do %>
              <i class="fas fa-align-justify footer-icon"></i>
            <% end %>
          </li>
          <li class="menu-item icon-border-right">
            <%= link_to notifications_path do %>
              <% if new_notifications(current_user).any? %>
                <i class="fas fa-bell bell-icon"></i>
                <i class="fas fa-circle new-notice-sign"></i>
              <% else %>
                <i class="fas fa-bell footer-icon"></i>
              <% end %>
            <% end %>
          </li>
          <li class="menu-item">
            <%= link_to home_path, data: {"turbolinks" => false} do %>
              <i class="fas fa-home footer-icon"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </section>
<% end %>
