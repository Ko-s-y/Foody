<% if current_user.following?(user) %>
  <%= link_to 'フォロー中', user_follows_path(user.id), method: :delete, remote: true, data: { confirm: "フォローを外しますか？" }, class: "button ope-btn follow-btn" %>
<% else %>
  <%= link_to 'フォローする', user_follows_path(user.id), method: :post, remote: true, class:"button is-info ope-btn follow-btn" %>
<% end %>
