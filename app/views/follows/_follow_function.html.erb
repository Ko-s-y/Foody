<% if current_user.following?(user) %>
  <%= link_to 'フォロー中', user_follows_path(user.id), method: :delete, remote: true, data: { confirm: "フォローを外しますか？" }, class: "button ope-btn follow-btn", id: "unfollow-btn" %>
<% elsif current_user.following?(user) == false && user.following?(current_user) == true %>
  <%= link_to 'フォローバックする', user_follows_path(user.id), method: :post, remote: true, class:"button is-info ope-btn followback-btn" %>
<% else %>
  <%= link_to 'フォローする', user_follows_path(user.id), method: :post, remote: true, class:"button is-info ope-btn follow-btn", id: "follow-btn" %>
<% end %>
<div class="field user-element">
  <%= link_to users_followings_path(name: user.name) do %>
    <span>フォロー中：<%= user.following_user.count %></span>
  <% end %>&nbsp;&nbsp;
  <%= link_to users_followers_path(name: user.name) do %>
    <span>フォロワー：<%= user.follower_user.count %></span>
  <% end %>
</div>
