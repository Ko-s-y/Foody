- provide(:title, "アクションユーザーリスト")
.ope-btn-area
  h2.appear-liked-user.appear-link
    i.fa.fa-star[style="color: #209cee;"]
    |  : 
    = @post.likes.count
    | 件
  h2.appear-checked-remember-user.appear-link
    i.fa.fa-book[style="color: green;"]
    |  : 
    = @post.remembers.count
    | 件
.like-users
  section.liked-user-list.hero.is-light.is-fullheight
    .columns.is-centered
      .column.is-10-desktop.is-10-widescreen
        .box
          .action-user-info
            - if @liked_users.exists?
              - @post.likes.each do |like|
                .info-area
                  - if like.user == current_user
                    = link_to image_tag(avatar_url(like.user), class: "action-user-icon", alt: "ユーザーアイコン"), users_show_path
                    strong.info-element
                      = link_to "あなた", users_show_path, class: "action-user-name"
                    span.info-date
                      = elapsed_time_counter(like.created_at)
                  - else
                    = link_to image_tag(avatar_url(like.user), class: "action-user-icon", alt: "ユーザーアイコン"), users_profile_path(name: like.user.name)
                    strong.info-element
                      = link_to "#{like.user.name}さん", users_profile_path(name: like.user.name), class: "action-user-name"
                    span.info-date
                      = elapsed_time_counter(like.created_at)
            - else
              h2.action-count-zero
                | まだいいねしたユーザーはいません
.remember-users
  section.checked-remember-user-list.hero.is-light.is-fullheight
    .columns.is-centered
      .column.is-10-desktop.is-10-widescreen
        .box
          .action-user-info
            - if @remember_users.exists?
              - @post.remembers.each do |remember|
                .info-area
                  - if remember.user == current_user
                    = link_to image_tag(avatar_url(remember.user), class: "action-user-icon", alt: "ユーザーアイコン"), users_show_path
                    strong.info-element
                      = link_to "あなた", users_show_path, class: "action-user-name"
                    span.info-date
                      = elapsed_time_counter(remember.created_at)
                  - else
                    = link_to image_tag(avatar_url(remember.user), class: "action-user-icon", alt: "ユーザーアイコン"), users_profile_path(name: remember.user.name)
                    strong.info-element
                      = link_to "#{remember.user.name}さん", users_profile_path(name: remember.user.name), class: "action-user-name"
                    span.info-date
                      = elapsed_time_counter(remember.created_at)
            - else
              h2.action-count-zero
                | まだブックマークしたユーザーはいません
= javascript_pack_tag 'post/action_user'
