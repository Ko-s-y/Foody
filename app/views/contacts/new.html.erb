<% provide(:title, "お問合せ") %>
<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-12-mobile is-10-tablet is-10-desktop is-10-widescreen is-9-fullhd">
          <div class="box">
            <div class="field has-text-centered">
              <strong>お問い合わせ</strong>
            </div>
            <div class="box">
              <%= render "shared/error", object: @contact %>
              <%= form_with url: confirm_contacts_path, method: :post, local: true do |f| %>
                <div class="field">
                  <div class="control has-icons-left">
                    <%= f.text_field :name, placeholder: "○○について", class: "input is-info", required: true, maxlength: 20, list: "contact-title" %>
                    <datalist id="contact-title">
                      <option value="ユーザーについて">
                      <option value="投稿について">
                      <option value="コメントについて">
                      <option value="アクションについて">
                      <option value="通知機能について">
                      <option value="検索について">
                      <option value="設定について">
                      <option value="その他">
                    </datalist>
                    <span class="icon is-small is-left">
                      <i class="fas fa-pen"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*必須,20字以内</p>
                </div>
                <div class="field">
                  <div class="control has-icons-left">
                    <%= f.text_area :content, class: "input is-info contact-textarea", placeholder: "お問合せ内容", required: true %>
                    <span class="icon is-small is-left">
                      <i class="far fa-sticky-note"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*必須</p>
                </div>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <div class="field">
                  <%= f.submit "入力内容を確認", class: "button is-link is-fullwidth m-t-10 m-b-10" %>
                </div>
                <div class="field">
                  <%= link_to "タイムラインへ", posts_path, class: "button is-danger ope-btn" %>
                </div>
                <div class="field">
                  <%= link_to "お問合せ履歴", contacts_path(current_user.name), class: "button" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
