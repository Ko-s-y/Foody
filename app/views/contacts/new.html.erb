<% provide(:title, "Contact") %>
<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-10-desktop is-10-widescreen">
          <div class="box">
            <div class="field has-text-centered">
              <strong>お問い合わせ</strong>
            </div>
            <div class="box">
              <%= render "shared/error", object: @contact %>
              <%= form_with(model: @contact, local: true) do |f| %>
                <div class="field">
                  <%= f.label :お名前, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*必ず記入をお願い致します。</p>
                </div>
                <div class="field">
                  <%= f.label :お問い合わせ内容, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_area :content, autocomplete: "introduction", class: "input is-info", placeholder: "(必須)" %>
                    <span class="icon is-small is-left">
                      <i class="far fa-sticky-note"></i>
                    </span>
                  </div>
                  <p class="help is-danger">*必ず記入をお願い致します。</p>
                </div>
                <div class="field">
                  <%= f.submit "送信する", class: "button is-link is-fullwidth m-t-10 m-b-10" %>
                </div>
                <div class="field">
                  <%= link_to "もどる", root_path, class: "button is-danger ope-btn" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
